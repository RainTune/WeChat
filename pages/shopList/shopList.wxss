/* pages/shopList/shopList.wxss */
.shop{
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
    position: relative;
}
.shop image{
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}
.shop .shop-info{
    width: 520rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #999999;
    line-height: 1.6;
}
.shop .shop-info .shop-title{
    font-size: 16px;
    color: black;
    width: 380rpx;
}
.shop .shop-star{
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    /*
    border: 1rpx solid black;
    */
}

