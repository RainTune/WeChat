/* pages/message/message.wxss */
page{
  background-color: #f1f1f1;
}
.card{
  margin: 20rpx 10rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
.card .card-title{
  font-size: 18px;
  margin-bottom: 10rpx;
}
.card .card-date{
  font-size: 12px;
  color: #ccc;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 10rpx;
  margin-bottom:15rpx;
}
.card .card-img{
  width: 100%;
  height: 300rpx;
}
.card .card-desc{
  font-size: 16px;
  margin: 20rpx 0;
}
.card .card-more{
  font-size: 14px;
  color: #999;
  /*设置伪元素arrow*/
  padding-right: 10rpx;
}